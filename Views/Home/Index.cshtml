@{
    ViewData["Title"] = "Home Page";
}


<section>
    <img src="imgs/home-bg.jpg" class="img-fluid" />
</section>
<section>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <center>
                    <h2>Fitur Kami</h2>
                </center>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <center>
                    <img width="150px" src="imgs/digital-inventory.png" />
                    <h4>Digital Book Inventory</h4>
                    <center>
                        <p class="text-justify">Digital Book Inventory merupakan list dari buku-buku yang
                            telah tersimpan di perpustakaan.
                        </p>
                    </center>
                </center>
            </div>

            <div class="col-md-6">
                <center>
                    <img width="150px" src="imgs/books.png" />
                    <h4>View Books</h4>
                    <center>
                        <p class="text-justify">Anda dapat melihat buku kesukaan anda yang terdapat dalam koleksi kami.
                        </p>
                    </center>
                </center>
            </div>

        </div>


    </div>

</section>

<section>
    <img src="imgs/in-homepage-banner.jpg" class="img-fluid" />
</section>

<section>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <center>
                    <h2>Cara Peminjaman Buku</h2>
                </center>
            </div>
        </div>

        <br />
        <br />

        <div class="row">
            <div class="col-md-4">
                <center>
                    <img width="150px" src="imgs/sign-up.png" />
                    <h4>Sign Up</h4>
                    <p class="text-justify">Anda terlebih dahulu diharuskan mendaftar sebagai member perpustakaan,
                        sebagai member anda dapat mencari buku sepuasnya dari koleksi kami.
                    </p>
                </center>
            </div>

            <div class="col-md-4">
                <center>
                    <img width="150px" src="imgs/publisher.png" />
                    <h4>Pinjam Buku</h4>
                    <p class="text-justify">Apabila Anda sudah mendapat buku yang anda sukai, Anda bisa memilih buku
                        yang anda sukai untuk dipinjam.
                    </p>
                </center>
            </div>

            <div class="col-md-4">
                <center>
                    <img width="150px" src="imgs/library.png" />
                    <h4>Pengembalian Buku</h4>
                    <p class="text-justify">Member yang telah meminjam buku dapat mengembalikannya melalui aplikasi ini.
                    </p>
                </center>
            </div>
        </div>


    </div>
